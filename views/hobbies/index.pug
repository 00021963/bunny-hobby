extends ../layout.pug

block content
  if success
    p.success Hobby saved successfully!
  
  h1 All hobbies
  

  each hobby in hobbies
    .hobby-card
      h3= hobby.title
      if hobby.description
        p.description= hobby.description

      p Rating: #{'ðŸ¥•'.repeat(hobby.rating)} (#{hobby.rating}/5)
        .action-buttons
          a.edit-btn(href=`/hobbies/${hobby.id}/edit`) Edit
          form.delete-form(method="POST" action=`/hobbies/${hobby.id}/delete`)
            button(type="submit" onclick="return confirm('Delete this hobby?')") Delete