block content
  h2 Edit hobby
  form(method="POST" action=`/hobbies/${hobby.id}`)
    .form-group
      label(for="title") Hobby name:
      input(type="text" name="title" value=hobby.title required)

    .form-group 
      label(for="description") Description (optional):
      textarea(name="description" rows="3")=hobby.description

    if errors && errors.length > 0
      .warning-message
        ul
          each error in errors
            li= error.msg

