extends ../layout.pug

block content
  h2 Add new hobby
  form(method="POST" action="/hobbies")
    .form-group
      label(for="title") Hobby name:
      input(type="text" name="title" required)
    
    .form-group
      label(for="rating") Rating:
      select(name="rating" required)
        option(value="1") 1 (Just starting)
        option(value="2") 2
        option(value="3") 3
        option(value="4") 4
        option(value="5") 5 (Expert!)
    
    button(type="submit") Save hobby